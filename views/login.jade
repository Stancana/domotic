extends layout

block content

    if message != ''
        div.alert.alert-danger #{message}

    div.row
        div.col-xs-12.col-sm-6.col-sm-offset-4
            form.form-horizontal(action="/admin/login" method="post")

                div.form-group
                    div.col-md-8
                        input.form-control(type="email" name="email" placeholder="Email")
                div.form-group
                    div.col-md-8
                        input.form-control(type="password" name="password" placeholder="Password")
                div.form-group
                    div.col-sm-offset-0.col-md-8
                        button.btn.btn-success(type="submit") Log In